directive @goField(forceResolver: Boolean) on FIELD_DEFINITION

type Query {
  "Return all books"
  books: [Book!]!

  "Look up a book by ID"
  book(id: ID!): Book
}

type Mutation {
  "Add a new book"
  addBook(input: AddBookInput!): Book!
}

type Book {
  id: ID!
  title: String!
  author: Author! @goField(forceResolver: true)
}

input AddBookInput {
  title: String!
  authorName: String!
}
